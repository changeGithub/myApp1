<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditText_1_Activity">

    <TextView
        android:id="@+id/edittext_1_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/edittext_1_activity_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_1_activity"
        />
    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffa033"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="用户名"
        android:background="@drawable/bg_btn1"

        android:drawableLeft="@drawable/icon_user"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/edittext_1_activity_id"
        />
    <EditText
        android:id="@+id/et_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffa033"
        android:textSize="16sp"
        android:hint="密码"
        android:inputType="textPassword"

        android:layout_below="@+id/et_1"
        android:layout_marginTop="15dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="5dp"
        android:maxLines="1"
        />
    <Button
        android:id="@+id/btn_et1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn2"
        android:textColor="#ffffff"
        android:text="login_1"
        android:layout_below="@id/et_2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_margin="10dp"

        android:drawablePadding="5dp"
        android:maxLines="1"

        />
</RelativeLayout>